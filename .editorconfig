root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2
# Disable automatic formatting for CSS files
format_on_save = false

[*.md]
trim_trailing_whitespace = false
